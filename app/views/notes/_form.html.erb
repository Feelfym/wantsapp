<%= form_with model: [ @comparison, @note ], local: true, class: "form-inline" do |form| %>
    <tr>
      <td><%= form.text_field :attribute_name, placeholder: '比較する項目', class: "border border-end-0 form-control-sm mb-2 mr-sm-2" %></td>
      <td><%= form.text_area :primary_value, placeholder: '', class: "w-75 border border-end-0 form-control-sm mb-2 mr-sm-2 " %></td>
      <td><%= form.text_area :secondary_value, placeholder: '', class: "w-75 border border-end-0 form-control-sm mb-2 mr-sm-2" %></td>
      <td><%= form.submit '項目を追加', class: "btn btn-outline-primary  btn-sm mb-2", data: {turbo: false} %></td>
    </tr>
<% end %>
