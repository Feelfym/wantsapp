<h2 class="text-center mt-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-password-reset' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.submit "リセットメールを送信", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>

<style>
  .form-password-reset {
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
  }
  .form-password-reset .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .form-password-reset .form-control:focus {
    z-index: 2;
  }
</style>
