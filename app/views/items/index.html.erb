<div class="container mt-4" style="max-width: 90%;">
  <%= link_to "新規投稿", new_item_path, class: "btn btn-primary mb-3" %>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>価格</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td>
            <%= link_to "詳細", item_path(item), class: "btn btn-info btn-sm" %>
            <%= link_to "編集", edit_item_path(item), class: "btn btn-info btn-sm" %>
            <%= link_to "削除", item_path(item), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
