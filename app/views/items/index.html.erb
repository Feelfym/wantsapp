<div class="container mt-4" style="max-width: 90%;">

  <% if user_signed_in? %>
    <% if @items.present? %>
      <div class="row m-2 mt-5">
        <div class="mr-2">
          <h2><%= @user.name %>さんのほしいものリスト</h2>
        </div>
        <div class="ml-5 mr-2">
          <h2><%= number_with_delimiter(@items.count) %>点 / </h2>
        </div>
        <div>
          <h2>¥<%= number_with_delimiter(@items.sum(:price)) %></h2>
        </div>
      </div>

      <table class="table table-hover mt-5">
        <thead class="thead-dark">
          <tr>
            <th>アイテム名</th>
            <th>価格</th>
            <th>購入予定日</th>
            <th>URL</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <% if item.user_id == current_user.id %>
              <tr data-link="<%= item_path(item) %>">
                <td><%= item.name %></td>
                <td>¥<%= number_with_delimiter(item.price) %></td>
                <td><%= item.will_purchase_date %></td>
                <% if item.url.present? %>
                  <td><%= link_to "商品ページ", item.url, target: "_blank", class: "btn btn-info btn-sm item-link" %></td>
                <% else %>
                  <td></td>
                <% end %>
                <td>
                  <%= link_to "詳細", item_path(item), class: "btn btn-info btn-sm item-link" %>
                  <%= link_to "編集", edit_item_path(item), class: "btn btn-info btn-sm item-link" %>
                  <%= link_to "削除", item_path(item), data: { turbo_method: :delete, turbo_confirm: "削除しますか？" }, class: "btn btn-danger btn-sm item-link" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="row m-2 mt-5">
        <div class="mr-2">
          <h2><%= @user.name %>さんのほしいものリストはまだ空です。</h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
