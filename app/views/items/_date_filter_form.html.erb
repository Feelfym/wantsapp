<%= form_with url: form_url, method: :get, local: true do |form| %>
  <div class="form-wrapper d-flex align-items-center">
    <div class="form-group mr-4">
      <label for="year">年を選択:</label>
      <%= year_select(@selected_year) %>
    </div>
    <div class="form-group">
      <label for="month">月を選択:</label>
      <%= month_select(@selected_month) %>
    </div>
    <div class="form-group">
      <%= form.submit '絞り込み', class: 'btn btn-outline-primary btn-sm ml-4 mt-4' %>
    </div>
    <div class="form-group">
      <%= link_to '選択を解除', form_url, class: 'btn btn-outline-primary btn-sm ml-4 mt-4' if @selected_year.present? && @selected_month.present? %>
    </div>
  </div>
<% end %>
