<div class="container mt-4" style="max-width: 90%;">
  <h2 class="mt-5">WishDigへようこそ</h1>
  <div class="m-5">
    <p>もう少しで完了です。</p>
    <p>あとで変更もできますから、</p>
    <p>気楽に入力しちゃってください。</p>
  </div>
  <%= form_with model: @item, url: update_step3_tutorial_path, method: :patch do |f| %>
    <div class="form-group">
      <div class="d-flex align-items-center">
        <%= f.label :price, "価格", class: "form-label" %>
        <div class="badge badge-danger ml-2 mb-2" style="height: 20px;">必須</div>
      </div>
      <%= f.text_field :price, class: "form-control", placeholder: "だいたいの金額をいれておきましょう" %>
    </div>
    <div class="form-group">
      <%= f.label :will_purchase_date, "購入予定日 (あとで変更できます)", class: "form-label" %>
      <span class="badge badge-primary ml-2">任意</span>
      <%= f.date_field :will_purchase_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :url, "商品URL (ネットショップやメーカーWebページなど)", class: "form-label" %>
      <span class="badge badge-primary ml-2">任意</span>
      <%= f.text_field :url, class: "form-control", placeholder: "https://example.com" %>
    </div>
    <div class="form-group">
      <%= f.label :image, "画像をアップロード", class: "form-label" %>
      <span class="badge badge-primary ml-2">任意</span>
      <%= f.file_field :image, class: "form-control border border-0" %>
    </div>
    <div class="actions">
      <%= f.submit "完了", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>